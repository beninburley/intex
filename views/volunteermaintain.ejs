<body>
    <br><br><br>
    <br><br><br>
    <br><br><br>
    <br><br><br>
    <br><br><br>
    <br><br><br>
    <table>
        <thead>
          <tr>
            <th hidden>Volunteer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Sewing Level</th>
            <th>Willing to Lead</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (volunteer_list.length > 0) { %>
            <% volunteer_list.forEach(row => { %>
              <tr>
                <td hidden><%= row.volunteer_id %></td>
                <td><%= row.first_name %></td>
                <td><%= row.last_name %></td>
                <td><%= row.city %></td>
                <td><%= row.sewing_level %></td>
                <td><%= row.willing_to_lead %></td>
                <td>
                  <form action="/volunteeredit/<%= row.volunteer_id %>" method="GET" style="display:inline;">
                    <button type="submit">Edit</button>
                  </form>
                <form action="/volunteerdelete/<%= row.volunteer_id %>" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7">No data available</td>
            </tr>
          <% } %>
        </tbody>
    </table>
    <form action="/" method="GET">
    <button type="submit">Return Home</button>
    </form>
    <!-- Add volunteer -->
    <form action="/volunteeradd" method="GET">
        <button type="submit">Add Volunteer</button>
    </form>
</body>
