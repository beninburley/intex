<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Admins</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="plugins/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="plugins/themefisher-font/style.css">

    <!-- Turtle Table CSS -->
    <link rel="stylesheet" href="css/turtle-table.css">
</head>

<body>
    <!-- Navigation -->
    <header class="navigation fixed-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light px-0">
                <a class="navbar-brand logo" href="/">
                    <img loading="lazy" class="logo-default" src="images/logo.png" alt="logo" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navigation">
                    <ul class="navbar-nav ml-auto text-center">
                        <li class="nav-item"><a class="nav-link" href="/internallanding">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/adminmaintain">Admins</a></li>
                        <li class="nav-item"><a class="nav-link" href="/volunteermaintain">Volunteers</a></li>
                        <li class="nav-item"><a class="nav-link" href="/requestmaintain">Requests</a></li>
                        <li class="nav-item"><a class="nav-link" href="/eventmaintain">Events</a></li>
                        <li class="nav-item"><a class="nav-link" href="/volunteer_eventsmaintain">Manage Volunteers</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="turtle-container">
        <div class="turtle-table-wrapper">
            <h2 style="text-align:center; color: #28ABE3;">Admin Info</h2>
            <table class="turtle-table">
                <thead>
                    <tr>
                        <th>Admin ID</th>
                        <th>Username</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (admin_list.length > 0) { %>
                        <% admin_list.forEach(row => { %>
                            <tr>
                                <td><%= row.admin_id %></td>
                                <td><%= row.username %></td>
                                <td>
                                    <form action="/adminedit/<%= row.admin_id %>" method="GET" style="display:inline;">
                                        <button class="turtle-btn" type="submit">Edit</button>
                                    </form>
                                    <form action="/admindelete/<%= row.admin_id %>" method="POST" style="display:inline;">
                                        <button class="turtle-btn" type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="turtle-no-data">No data available</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>

            <div style="text-align:center; margin-top: 20px;">
                <form action="/internallanding" method="GET" style="display:inline;">
                    <button class="turtle-btn" type="submit">Return Home</button>
                </form>
                <form action="/adminadd" method="GET" style="display:inline;">
                    <button class="turtle-btn" type="submit">Add Admin</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="plugins/jquery/jquery.min.js"></script>
    <script src="plugins/bootstrap/bootstrap.min.js"></script>
</body>

</html>
