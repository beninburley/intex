<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Event</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="plugins/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="plugins/themefisher-font/style.css">

    <!-- Turtle Table CSS -->
    <link rel="stylesheet" href="css/turtle-table.css">
</head>

<body onload="highlightCurrentDay()">
    <!-- Navigation -->
    <header class="navigation fixed-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-white px-0 shadow-sm">
                <a class="navbar-brand logo" href="/">
                    <img loading="lazy" class="logo-default" src="images/logo.png" alt="logo" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navigation">
                    <ul class="navbar-nav ml-auto text-center">
                        <li class="nav-item"><a class="nav-link" href="/internallanding">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/adminmaintain">Admins</a></li>
                        <li class="nav-item"><a class="nav-link" href="/volunteermaintain">Volunteers</a></li>
                        <li class="nav-item"><a class="nav-link" href="/requestmaintain">Requests</a></li>
                        <li class="nav-item"><a class="nav-link" href="/eventmaintain">Events</a></li>
                        <li class="nav-item"><a class="nav-link" href="/volunteer_eventsmaintain">Manage Volunteers</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="turtle-container">
        <div class="turtle-table-wrapper">
            <h2 style="text-align: center; color: #28ABE3;">Add Event</h2>
            <form id="contact-form" action="/eventadd" method="post" role="form">
                <!-- How many people -->
                <div class="form-group">
                    <label for="peopleCount">How many people participated?</label>
                    <input type="number" class="form-control" name="peopleCount" id="peopleCount"
                        placeholder="Total number of people" required>
                </div>

                <!-- Event Type -->
                <div class="form-group">
                    <label>What kind of event was this?</label><br>
                    <div>
                        <input type="radio" id="sewing" name="sewingOption" value="sewing">
                        <label for="sewing">Sewing</label>
                    </div>
                    <div>
                        <input type="radio" id="nonSewing" name="sewingOption" value="non-sewing">
                        <label for="nonSewing">Non-Sewing</label>
                    </div>
                    <div>
                        <input type="radio" id="both" name="sewingOption" value="both">
                        <label for="both">Both</label>
                    </div>
                </div>

                <!-- Event Date -->
                <div class="form-group">
                    <label for="eventDate">What date did the event take place?</label>
                    <input type="date" class="form-control" name="eventDate" id="eventDate" required>
                </div>

                <!-- Event Start Time -->
                <div class="form-group">
                    <label for="eventStartTime">What time did the event start?</label>
                    <input type="time" class="form-control" name="eventStartTime" id="eventStartTime" required>
                </div>

                <!-- Event Duration -->
                <div class="form-group">
                    <label for="eventDuration">How long did the event last? (e.g., hours)</label>
                    <input type="number" class="form-control" name="eventDuration" id="eventDuration"
                        placeholder="Event duration" min="0" required>
                </div>

                <!-- Address -->
                <div class="form-group">
                    <label for="addressLine1">Address Line 1</label>
                    <input type="text" class="form-control" name="addressLine1" id="addressLine1"
                        placeholder="Address Line 1" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="addressLine2" id="addressLine2"
                        placeholder="Address Line 2 (Optional)">
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" class="form-control" name="city" id="city" placeholder="City" required>
                </div>
                <div class="form-group">
                    <label for="state">State</label>
                    <input type="text" class="form-control" name="state" id="state" placeholder="State" maxlength="2"
                        required>
                </div>

                <!-- Venue Type -->
                <div class="form-group">
                    <label for="venueType">Venue Type</label>
                    <select class="form-control" name="venueType" id="venueType" required>
                        <option value="livingRoom">Living Room</option>
                        <option value="officeSpace">Office Space</option>
                        <option value="gym">Gym</option>
                        <option value="church or School">Church/School Building</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <!-- Contact Info -->
                <div class="form-group">
                    <label for="contactFirstName">First Name</label>
                    <input type="text" class="form-control" name="contactFirstName" id="contactFirstName"
                        placeholder="First Name" required>
                </div>
                <div class="form-group">
                    <label for="contactLastName">Last Name</label>
                    <input type="text" class="form-control" name="contactLastName" id="contactLastName"
                        placeholder="Last Name" required>
                </div>
                <div class="form-group">
                    <label for="contactEmail">Email</label>
                    <input type="email" class="form-control" name="contactEmail" id="contactEmail" placeholder="Email"
                        required>
                </div>
                <div class="form-group">
                    <label for="contactPhone">Phone Number</label>
                    <input type="tel" class="form-control" name="contactPhone" id="contactPhone"
                        placeholder="e.g., (801) 234-5678" pattern="[0-9]+" maxlength="15" required>
                </div>

                <!-- Additional Info -->
                <div class="form-group">
                    <label for="notes">Notes</label>
                    <textarea rows="4" class="form-control" name="notes" id="notes"
                        placeholder="Any additional information"></textarea>
                </div>

                <div class="form-group">
                    <label for="pockets">Number of pockets made?</label>
                    <input type="number" class="form-control" name="pockets" id="pockets" placeholder="0" required>
                </div>

                <div class="form-group">
                    <label for="collars">Number of collars made?</label>
                    <input type="number" class="form-control" name="collars" id="collars" placeholder="0" required>
                </div>

                <div class="form-group">
                    <label for="envelopes">Number of envelopes made?</label>
                    <input type="number" class="form-control" name="envelopes" id="envelopes" placeholder="0" required>
                </div>

                <div class="form-group">
                    <label for="vests">Number of vests made?</label>
                    <input type="number" class="form-control" name="vests" id="vests" placeholder="0" required>
                </div>

                <div class="form-group">
                    <label for="completed_product">Number of completed products?</label>
                    <input type="number" class="form-control" name="completed_product" id="completed_product"
                        placeholder="0" required>
                </div>

                <!-- Form Submit -->
                <div class="text-center">
                    <button type="submit" class="turtle-btn">Cancel</button>

                    <button type="submit" class="btn turtle-btn">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        function highlightCurrentDay() {
            const calendar = document.getElementById('dates');
            const today = new Date().toISOString().split('T')[0];
            if (!calendar.value) {
                calendar.value = today;
            }
        }
    </script>
</body>

</html>