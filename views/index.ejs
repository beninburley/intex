<!-- Turtle Chat -->
<div id="turtleSection">
  <canvas id="turtleCanvas" title="Ask me anything!"></canvas>
  <div id="chatWindow" class="hidden">
    <div id="responseArea"></div>
    <div id="questionInput">
      <input id="userInput" type="text" placeholder="Type your question here..." />
      <button id="askButton">Ask</button>
    </div>
  </div>
</div>

<script>
  const canvas = document.getElementById("turtleCanvas");
  const chatWindow = document.getElementById("chatWindow");
  const responseArea = document.getElementById("responseArea");
  const userInput = document.getElementById("userInput");
  const askButton = document.getElementById("askButton");

  // Position and click behavior for the turtle
  canvas.addEventListener("click", () => {
    chatWindow.classList.toggle("hidden");
    chatWindow.classList.toggle("slide-in");
  });

  // Send user query and display response
  askButton.addEventListener("click", async () => {
    const userMessage = userInput.value.trim();
    if (!userMessage) return;

    try {
      const response = await fetch("/chat", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ message: userMessage }),
      });

      const data = await response.json();

      // Add response to the response area
      const responseElement = document.createElement("div");
      responseElement.classList.add("response");
      responseElement.textContent = data.response;

      responseArea.appendChild(responseElement);
      responseArea.scrollTop = responseArea.scrollHeight; // Scroll to the bottom
      userInput.value = "";
    } catch (error) {
      console.error("Error:", error);
    }
  });
</script>

<style>
  /* Positioning turtle in bottom-right */
  #turtleCanvas {
    position: fixed;
    bottom: 20px;
    right: 20px;
    cursor: pointer;
  }

  /* Chat window styles */
  #chatWindow {
    position: fixed;
    bottom: 100px;
    right: 20px;
    width: 300px;
    background: #ffffff;
    border: 1px solid #ccc;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transition: transform 0.3s ease-in-out;
  }

  /* Hidden by default */
  .hidden {
    display: none;
  }

  /* Slide-in animation */
  .slide-in {
    display: block;
    transform: translateX(0);
  }

  /* Response area styles */
  #responseArea {
    height: 150px;
    overflow-y: auto;
    padding: 10px;
    background: #f9f9f9;
