<body onload="highlightCurrentDay()">
    <!-- Contact Form -->
    <div class="contact-form col-md-6 mx-auto">
        <form id="contact-form" action="/eventedit/<%=spec_event.event_id%>" method="post" role="form">

            <!-- How many people will be there? -->
            <div class="form-group mb-4">
                <label for="peopleCount">How many people participated?</label>
                <input type="number" class="form-control" name="peopleCount" id="peopleCount"
                    value="<%= spec_event.actual_participants%>" required>
            </div>

            <!-- Sewing preference -->
            <div class="form-group mb-4">
                <label>What kind of event was this?</label><br>
                <input type="radio" id="sewing" name="sewingOption" value="SEWING" <%= spec_event.activity_type === 'SEWING' ? 'checked' : '' %> required>
                <label for="sewing">Sewing</label><br>
                <input type="radio" id="nonSewing" name="sewingOption" value="NON-SEWING" <%= spec_event.activity_type === 'NON-SEWING' ? 'checked' : '' %> required>
                <label for="nonSewing">Non-Sewing</label><br>
                <input type="radio" id="both" name="sewingOption" value="BOTH" <%= spec_event.activity_type === 'BOTH' ? 'checked' : '' %> required>
                <label for="both">Both</label>
            </div>

            <!-- Event Date -->
            <div class="form-group mb-4">
                <label for="eventDate">What date did the event take place?</label>
                <input type="date" class="form-control" name="eventDate" id="eventDate" required value="<%=spec_event.event_date%>">
            </div>

            <!-- Event Time -->
            <div class="form-group mb-4">
                <label for="eventStartTime">What time did the event start?</label>
                <input type="time" class="form-control" name="eventStartTime" id="eventStartTime" required value="<%=spec_event.start_time%>">
            </div>

            <!-- Event Duration -->
            <div class="form-group mb-4">
                <label for="eventDuration">How long did the event last? (e.g., hours)</label>
                <input type="number" class="form-control" name="eventDuration" id="peopleCount"
                    placeholder="Event duration" min="0" require value="<%=spec_event.duration%>">
            </div>

            <!-- Address Form -->
            <div class="form-group mb-4">
                <label for="addressLine1">Address Line 1</label>
                <input type="text" class="form-control" name="addressLine1" id="addressLine1"
                value="<%= spec_event.street_address_1%>" required>
            </div>
            <div class="form-group mb-4">
                <input type="text" class="form-control" name="addressLine2" id="addressLine2"
                    value="<%= spec_event.street_address_2%>">
            </div>
            <div class="form-group mb-4">
                <label for="city">City</label>
                <input type="text" class="form-control" name="city" id="city" value="<%= spec_event.city%>" required>
            </div>
            <div class="form-group mb-4">
                <label for="state">State</label>
                <input type="text" class="form-control" name="state" id="state" value="<%= spec_event.state%>" required>
            </div>

            <div class="form-group mb-4">
                <label for="venueType">Venue Type</label>
                <select class="form-control" name="venueType" id="venueType" required>
                    <option value="LIVINGROOM" <%=spec_event.venue_type==='LIVINGROOM' ? 'selected' : '' %>>Living Room</option>
                    <option value="OFFICESPACE"<%=spec_event.venue_type==='OFFICESPACE' ? 'selected' : '' %>>Office Space</option>
                    <option value="GYM"<%=spec_event.venue_type==='GYM' ? 'selected' : '' %>>Gym</option>
                    <option value="CHURCH"<%=spec_event.venue_type==='CHURCH' ? 'selected' : '' %>>Church/School Building</option>
                    <option value="OTHER"<%=spec_event.venue_type==='OTHER' ? 'selected' : '' %>>Other</option>
                </select>
            </div>

            <!-- Contact Name (First & Last) and Phone Email -->
            <div class="form-group mb-4">
                <label for="contactFirstName">First Name</label>
                <input type="text" class="form-control" name="contactFirstName" id="contactFirstName"
                value="<%= spec_event.contact_first_name%>" required>
            </div>
            <div class="form-group mb-4">
                <label for="contactLastName">Last Name</label>
                <input type="text" class="form-control" name="contactLastName" id="contactLastName"
                    value="<%= spec_event.contact_last_name%>" required>
            </div>
            <div class="form-group mb-4">
                <label for="contactEmail">Email</label>
                <input type="email" class="form-control" name="contactEmail" id="contactEmail"
                value="<%= spec_event.contact_email%>" required>
            </div>
            <div class="form-group mb-4">
                <label for="contactPhone">Phone Number</label>
                <input type="tel" class="form-control" name="contactPhone" id="contactPhone" value="<%= spec_event.contact_phone%>"
                    pattern="[0-9]+" maxlength="15" required>
            </div>


            <!-- Share Jen's story -->
            <div class="form-group mb-4">
                <label>Did Jen share her story?</label><br>
                <input type="checkbox" id="jenStory" name="jenStory" value="on" <%= spec_event.jen_story ? 'checked' : '' %>>
                <label for="jenStory">Yes</label>
            </div>

            <!-- Notes and/or Other Dates -->
            <div class="form-group mb-4">
                <label for="notes">Notes</label>
                <input type="text" class="form-control" name="notes" id="notes"
                value="<%= spec_event.notes%>"></input>
            </div>
            <div class="form-group mb-4">
                <label>Products Produced</label>
                <% event_products.forEach(product => { %>
                    <div>
                        <label for="<%= product.product_type %>"><%= product.product_type %>:</label>
                        <input type="number" 
                            class="form-control" 
                            id="<%= product.product_type %>" 
                            name="products[<%= product.product_type %>]" 
                            value="<%= product.amount_produced %>" 
                            min="0">
                    </div>
                <% }); %>
            </div>


            <div class="form-group mb-4">
                <label for="completed_product">Number of completed products?</label>
                <input type="number" class="form-control" name="completed_product" id="completed_product" value="<%= spec_event.completed_products%>" required>
            </div>


            <!-- Form fields -->
            <button type="submit" class="btn btn-main">Submit</button>


        </form>
    </div>
    <!-- ./End Contact Form -->

    <script>
        function highlightCurrentDay() {
            const calendar = document.getElementById('dates');
            const today = new Date().toISOString().split('T')[0];
            if (!calendar.value) {
                calendar.value = today;
            }
        }
    </script>
