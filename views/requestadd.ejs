<body onload="highlightCurrentDay()">

    <!--Start Contact Us
    	=========================================== -->
    <section class="contact-us" id="contact">
        <div class="container">
            <div class="row justify-content-center">
                <!-- section title -->
                <div class="col-xl-6 col-lg-8">
                    <div class="title text-center">
                        <h2>Admin Event Request</h2>
    
                        <div class="border"></div>
                    </div>
                </div>
                <!-- /section title -->
            </div>
            <div class="row">
    
                <!-- Contact Form -->
                <div class="contact-form col-md-6 mx-auto">
                    <form id="contact-form" action="/requestadd" method="post" role="form">
    
                        <!-- How many people will be there? -->
                        <div class="form-group mb-4">
                            <label for="peopleCount">How many people will be there? (can be a rough estimate)</label>
                            <input type="number" class="form-control" name="peopleCount" id="peopleCount"
                                placeholder="Estimated number of people" required>
                        </div>
    
                        <!-- Sewing preference -->
                        <div class="form-group mb-4">
                            <label>Would you like to do sewing, non-sewing, or both at the event?</label><br>
                            <input type="radio" id="sewing" name="sewingOption" value="sewing">
                            <label for="sewing">Sewing</label><br>
                            <input type="radio" id="nonSewing" name="sewingOption" value="non-sewing">
                            <label for="nonSewing">Non-Sewing</label><br>
                            <input type="radio" id="both" name="sewingOption" value="both">
                            <label for="both">Both</label>
                        </div>
    
                        <!-- Event Date -->
                        <div class="form-group mb-4">
                            <label for="eventDate">What date would you like to schedule the event? (Select a single
                                date)</label>
                            <input type="date" class="form-control" name="eventDate" id="eventDate" required>
                        </div>
    
                        <script>
                            // Set the minimum date to today
                            const eventDateInput = document.getElementById('eventDate');
                            const today = new Date().toISOString().split('T')[0]; // Get today's date in YYYY-MM-DD format
                            eventDateInput.min = today; // Set the min attribute to today's date
                        </script>
    
                        <!-- Event Time -->
                        <div class="form-group mb-4">
                            <label for="eventStartTime">What time do you want the event to start?</label>
                            <input type="time" class="form-control" name="eventStartTime" id="eventStartTime" required>
                        </div>
    
                        <!-- Event Duration -->
                        <div class="form-group mb-4">
                            <label for="eventDuration">How long would you like the event to go? (Estimated in hours)</label>
                            <input type="number" class="form-control" name="eventDuration" id="peopleCount"
                                placeholder="Estimated duration" min="0" required>
                        </div>
    
                        <!-- Address Form -->
                        <div class="form-group mb-4">
                            <label for="addressLine1">Address Line 1</label>
                            <input type="text" class="form-control" name="addressLine1" id="addressLine1"
                                placeholder="Address Line 1" required>
                        </div>
                        <div class="form-group mb-4">
                            <input type="text" class="form-control" name="addressLine2" id="addressLine2"
                                placeholder="Address Line 2 (Optional)">
                        </div>
                        <div class="form-group mb-4">
                            <label for="city">City</label>
                            <input type="text" class="form-control" name="city" id="city" placeholder="City" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="state">State</label>
                            <input type="text" class="form-control" name="state" id="state" placeholder="State" required>
                        </div>
    
                        <div class="form-group mb-4">
                            <label for="venueType">Venue Type</label>
                            <select class="form-control" name="venueType" id="venueType" required>
                                <option value="livingRoom">Living Room</option>
                                <option value="officeSpace">Office Space</option>
                                <option value="gym">Gym</option>
                                <option value="churchSchool">Church/School Building</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
    
                        <!-- Contact Name (First & Last) and Phone Email -->
                        <div class="form-group mb-4">
                            <label for="contactFirstName">First Name</label>
                            <input type="text" class="form-control" name="contactFirstName" id="contactFirstName"
                                placeholder="First Name" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="contactLastName">Last Name</label>
                            <input type="text" class="form-control" name="contactLastName" id="contactLastName"
                                placeholder="Last Name" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="contactEmail">Email</label>
                            <input type="email" class="form-control" name="contactEmail" id="contactEmail"
                                placeholder="Email" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="contactPhone">Phone Number</label>
                            <input type="tel" class="form-control" name="contactPhone" id="contactPhone" placeholder="e.g., (801) 234-5678"
                                pattern="[0-9]+" maxlength="15" required>
                        </div>
    
    
                        <!-- Share Jen's story -->
                        <div class="form-group mb-4">
                            <label>Would you like Jen to share her story?</label><br>
                            <input type="checkbox" id="jenStory" name="jenStory">
                            <label for="jenStory">Yes</label>
                        </div>
    
                        <!-- Notes and/or Other Dates -->
                        <div class="form-group mb-4">
                            <label for="notes">Notes</label>
                            <textarea rows="4" class="form-control" name="notes" id="notes"
                                placeholder="Any additional information"></textarea>
                        </div>
    
                        <div class="form-group mb-4">
                            <label for="dateNotes">Other dates (Optional)</label>
                            <textarea rows="4" class="form-control" name="dateNotes" id="dateNotes"
                                placeholder="Any other potential dates (e.g., 12/01/2024)"></textarea>
                        </div>
    
    
                        <!-- Form fields -->
                        <button type="submit" class="btn btn-main">Submit</button>
    
    
                    </form>
                </div>
                <!-- ./End Contact Form -->
    
            </div> <!-- end row -->
        </div> <!-- end container -->
