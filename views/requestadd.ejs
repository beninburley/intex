    <title>Add Event</title>
    <script>
        function highlightCurrentDay() {
            const calendar = document.getElementById('dates');
            const today = new Date().toISOString().split('T')[0];
            if (!calendar.value) {
                calendar.value = today;
            }
        }
    </script>
