<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Volunteer</title>
</head>
<body>
    <form action="/volunteermaintain" method="GET">
        <!-- First Name -->
        <label for="first_name">First Name:</label>
        <input type="text" name="first_name" id="first_name" required>
        <br><br>

        <!-- Last Name -->
        <label for="last_name">Last Name:</label>
        <input type="text" name="last_name" id="last_name" required>
        <br><br>

        <!-- Email -->
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" required>
        <br><br>

        <!-- How they heard about the opportunity -->
        <label for="referral">How did you hear about the opportunity?</label>
        <select name="referral" id="referral" required>
            <option value="friend">A Friend</option>
            <option value="social_media">Social Media</option>
            <option value="website">Website</option>
            <option value="email">Email</option>
            <option value="other">Other</option>
        </select>
        <br><br>

        <!-- Sewing Level -->
        <label>Sewing Level:</label>
        <br>
        <input type="radio" name="sewing_level" id="beginner" value="beginner" required>
        <label for="beginner">Beginner</label>
        <br>
        <input type="radio" name="sewing_level" id="intermediate" value="intermediate">
        <label for="intermediate">Intermediate</label>
        <br>
        <input type="radio" name="sewing_level" id="experienced" value="experienced">
        <label for="experienced">Experienced</label>
        <br><br>

        <!-- Number of Hours -->
        <label for="hours">Number of hours willing to volunteer per month:</label>
        <input type="number" name="hours" id="hours" required>
        <br><br>

        <button type="submit">Save</button>
    </form>
</body>
</html>
